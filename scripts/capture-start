#!/bin/bash

set -e 
source functions.sh

kcs_arg_check $# 1
stream=$1
status=1

if kcs_is_beamformer ${KATCP_MODE} ; then

# bf mode wants a stream parameter

  case "${stream}" in
    k7)
      target=${KCS_CORR_RX}
      if kcpcmd -t 45 -k -m tx-start ${stream} ${target%:*} ${target##*:} ; then
        status=0
      fi
      ;;
    bf0|bf1)

        bf_rx=KCS_${stream^^*}META_RX
        target=${!bf_rx}
        if [ -n "${target}" ] ; then
          if kcpcmd -t 30 -k -m bf-destination ${stream} meta ${target%:*} ${target##*:}  ; then

            bf_rx=KCS_${stream^^*}META_DATA
            target=${!bf_rx}
            if [ -n "${target}" ] ; then
              if kcpcmd -t 30 -k -m bf-destination ${stream} data ${target%:*} ${target##*:}  ; then

                if kcpcmd -t 45 -k -m tx-start ${stream} ; then
                  status=0
                fi
              fi
            fi

          fi
        fi
      ;;
    *)
      kcs_error "unsupported data stream ${stream}"
      ;;
  esac
  
else

  # corr modes
  if [ "$stream" = "k7" ] ; then
    if kcpcmd -t 45 -k -m tx-start ${target%:*} ${target##*:} ; then
      status=0
    fi
  else 
    kcs_error "stream ${stream} not available in this mode"
  fi

fi

kcs_corr_log
if [ "${status}" -ne "0" ] ; then
  kcs_error "corr operations for ${stream} failed"
fi
